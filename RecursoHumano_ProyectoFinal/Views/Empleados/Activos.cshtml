@model IEnumerable<RecursoHumano_ProyectoFinal.Models.Empleados>
@{
    ViewBag.Title = "Empleados";
}
<h2>Empleados activos</h2><br />

@using (Html.BeginForm("Activos", "Empleados", FormMethod.Get))
{
    @Html.Label("Busca por nombre:") <text></text> @Html.TextBox("searching")<input type="submit" value="Search" />
}
<br />

<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Codigo Empleado")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Apellido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefono)
        </th>
        <th>
            @Html.DisplayName("Departamento")
        </th>
        <th>
            @Html.DisplayName("Cargo")
        </th>
        <th>
            @Html.DisplayName("Fecha de Ingreso")
        </th>
        <th></th>
    </tr>

    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan="3" style="color:red">
                No usuarios registrados
            </td>
        </tr>
    }
    else
    { }

    @foreach (var item in Model)
    {
        if (item.Estatus == true)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Codigo_Empleado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apellido)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefono)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Departamento.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cargo.Cargo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha_Ingreso)
                </td>

            </tr>
        }
    }
</table>
